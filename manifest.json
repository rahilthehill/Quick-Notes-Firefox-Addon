{
    "manifest_version": 2,
    "name": "Quick Notes",
    "version": "1.0",
    "description": "A simple extension to take quick notes in Firefox.",
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },
    "permissions": [
      "activeTab",
      "storage"
    ]
  }
  